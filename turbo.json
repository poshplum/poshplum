{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputMode": "new-only",
            "outputs": [".dist/**"]
        },
        "build:watch": {
            "cache": false,
            "outputMode": "none",
            "outputs": [".dist/**"]
        },
        "dev": {
            "cache": false,
            "outputs": [],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts",
                "test/**/*.tsx"
            ]
        }
    }
}
